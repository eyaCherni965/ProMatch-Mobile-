<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/swiping"
    tools:context=".SwipingActivity">

    <!-- Indicateurs de progression -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_person"
            android:contentDescription="Profil"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/dot1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_active"
            android:layout_margin="4dp"/>
        <View
            android:id="@+id/dot2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_inactive"
            android:layout_margin="4dp"/>
        <View
            android:id="@+id/dot3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_inactive"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Tutoriel swipe -->
    <FrameLayout
        android:id="@+id/swipeHintContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="visible"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/swipeHintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trouve ton stage idéal"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="380dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe à droite si tu es intéressé,\n\nSwipe à gauche sinon!"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="280dp" />

        <ImageView
            android:id="@+id/arrowLeft"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="Flèche gauche"
            android:layout_marginTop="260dp"
            android:alpha="0.9" />

        <ImageView
            android:id="@+id/arrowRight"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="Flèche droite"
            android:layout_marginTop="260dp"
            android:alpha="0.9" />

        <Button
            android:id="@+id/btnStartSwiping"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:text="Clique Ici!"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded"
            android:paddingVertical="12dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="150dp" />



    </FrameLayout>


    <!-- Cartes de stages -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerStages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:padding="16dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator"
        app:layout_constraintBottom_toTopOf="@id/swipeButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Feedback swipe -->
    <ImageView
        android:id="@+id/overlayLike"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/overlay_like"
        android:visibility="gone"
        android:alpha="0.8"
        app:layout_constraintTop_toTopOf="@id/viewPagerStages"
        app:layout_constraintBottom_toBottomOf="@id/viewPagerStages"
        app:layout_constraintStart_toStartOf="@id/viewPagerStages"
        app:layout_constraintEnd_toEndOf="@id/viewPagerStages" />

    <ImageView
        android:id="@+id/overlayDislike"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/overlay_dislike"
        android:visibility="gone"
        android:alpha="0.8"
        app:layout_constraintTop_toTopOf="@id/viewPagerStages"
        app:layout_constraintBottom_toBottomOf="@id/viewPagerStages"
        app:layout_constraintStart_toStartOf="@id/viewPagerStages"
        app:layout_constraintEnd_toEndOf="@id/viewPagerStages" />

    <!-- Boutons d'action -->
    <LinearLayout
        android:id="@+id/swipeButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btnRewind"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/back"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="Revenir en arrière" />

        <ImageView
            android:id="@+id/btnReject"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/last_trash"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="Pas intéressé" />

        <ImageView
            android:id="@+id/btnLike"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/heart_check"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="Intéressé" />

        <ImageView
            android:id="@+id/btnSuperLike"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/perso"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="Super intéressé" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
