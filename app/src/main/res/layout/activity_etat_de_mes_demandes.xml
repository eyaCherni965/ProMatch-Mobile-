<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#280312"
    tools:context=".EtatDeMesDemandes">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="376dp"
        android:layout_height="745dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="1dp"
        android:background="#E2E2DE"
        app:circularflow_radiusInDP="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".EtatDeMesDemandes">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDemandes"
            android:layout_width="369dp"
            android:layout_height="609dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="1dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="357dp"
            android:layout_height="61dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="14sp"
            android:text="Ã‰tat de mes demandes"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#260707"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
